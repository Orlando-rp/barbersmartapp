# =====================================================
# BarberSmart - Docker Environment Variables
# =====================================================
# Copy this file to .env in the same directory as docker-compose.yml
# =====================================================

# ===================
# REQUIRED: Supabase
# ===================
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# ===================
# REQUIRED: Let's Encrypt
# ===================
# Email for Let's Encrypt certificate notifications
ACME_EMAIL=admin@barbersmart.app

# ===================
# OPTIONAL: Main Domain
# ===================
# Primary domain for the platform
MAIN_DOMAIN=barbersmart.app

# Comma-separated list of main domains
VITE_MAIN_DOMAINS=barbersmart.app,barbersmart.com.br

# ===================
# OPTIONAL: Cloudflare (for wildcard certs)
# ===================
# Required only if using DNS challenge for wildcard certificates
# CF_API_EMAIL=your-cloudflare-email@example.com
# CF_DNS_API_TOKEN=your-cloudflare-api-token

# ===================
# OPTIONAL: Traefik Dashboard
# ===================
# Generate with: htpasswd -nb admin your-password
# Default: admin:admin (NOT SECURE - CHANGE THIS!)
TRAEFIK_DASHBOARD_AUTH=admin:$$apr1$$8MQf8DUK$$VDq5gDJOcBz7PmqH7CpCX/

# ===================
# TENANT CONFIGURATION
# ===================
VITE_ENABLE_TENANT_DETECTION=true
VITE_TRUST_PROXY_HEADERS=true
VITE_IGNORED_DOMAINS=localhost

# ===================
# BRANDING
# ===================
VITE_DEFAULT_SYSTEM_NAME=BarberSmart
VITE_DEFAULT_TAGLINE=Gest√£o Inteligente para Barbearias

# ===================
# PWA
# ===================
VITE_ENABLE_PWA=true
