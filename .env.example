# =====================================================
# BarberSmart - Environment Variables
# =====================================================
# Copy this file to .env and fill in the values
# For Docker deployment, these can be set in docker-compose.yml
# =====================================================

# ===================
# SUPABASE CONFIG
# ===================
# Your Supabase project URL and anon key
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# ===================
# MULTI-TENANT CONFIG
# ===================
# Main domains that serve the platform dashboard (comma-separated)
# These domains will show the login page, not tenant pages
VITE_MAIN_DOMAINS=barbersmart.app,barbersmart.com.br

# Domains to ignore for tenant detection (development/staging)
VITE_IGNORED_DOMAINS=localhost,lovable.app,lovableproject.com

# Enable/disable tenant detection (set to 'false' to disable)
VITE_ENABLE_TENANT_DETECTION=true

# Trust reverse proxy headers (X-Forwarded-Host, etc.)
# Set to 'true' when running behind a reverse proxy
VITE_TRUST_PROXY_HEADERS=true

# ===================
# BRANDING CONFIG
# ===================
# Default system name when no tenant branding is found
VITE_DEFAULT_SYSTEM_NAME=BarberSmart

# Default tagline
VITE_DEFAULT_TAGLINE=Gest√£o Inteligente para Barbearias

# ===================
# PWA CONFIG
# ===================
# Enable PWA features
VITE_ENABLE_PWA=true

# ===================
# OPTIONAL: EXTERNAL SERVICES
# ===================
# These are managed via Supabase Edge Function secrets
# but can be referenced here for documentation

# OpenAI API Key (for chatbot)
# OPENAI_API_KEY=sk-...

# WhatsApp API (Meta Cloud API or Evolution API)
# WHATSAPP_API_TOKEN=...
# WHATSAPP_PHONE_NUMBER_ID=...

# Payment Gateway (MercadoPago, PagSeguro, etc.)
# MERCADOPAGO_ACCESS_TOKEN=...
